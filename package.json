{
  "name": "internetarchive-ts",
  "version": "0.1.0",
  "description": "Archive.org API wrapper written in Typescript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "test": "cross-env NODE_ENV=testing ts-mocha --timeout 1000 \"./src/**/*.spec.ts\"",
    "test2": "ts-mocha -n loader=ts-node/esm -p ./tsconfig.json ./src/**/*.spec.ts",
    "test3": "mocha --require ts-node/register --require test/setup.ts",
    "test:coverage": "nyc --reporter=html --reporter=text --reporter=text-summary npm test",
    "clean": "rm -rf ./lib",
    "fix-esm-import-path": "fix-esm-import-path ./src/",
    "build": "npm run clean && tsc",
    "doc": "typedoc && cp ./internet-archive-ts-logo.svg ./doc"
  },
  "keywords": [
    "archive.org",
    "internet",
    "archive",
    "api"
  ],
  "author": "Thomas Novotny",
  "license": "ISC",
  "dependencies": {
    "minimatch": "^9.0.3",
    "rfc6902": "^5.1.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/chai-as-promised": "^8.0.2",
    "@types/express": "^5.0.6",
    "@types/mocha": "^10.0.0",
    "@types/node": "^24.10.1",
    "chai": "^4.3.6",
    "chai-as-promised": "^8.0.2",
    "cross-env": "^7.0.3",
    "express": "^5.2.1",
    "fix-esm-import-path": "^1.10.3",
    "mocha": "^11.7.5",
    "nyc": "^15.1.0",
    "ts-mocha": "^11.1.0",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.15"
  },
  "mocha": {
    "recursive": true,
    "reporter": "spec",
    "timeout": 5000,
    "extension": [
      "js",
      "mjs"
    ],
    "spec": "src/**/*.spec.ts"
  },
  "mochaExplorer.files": "src/**/*.spec.ts",
  "mochaExplorer.require": "ts-node/register"
}