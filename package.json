{
  "name": "internetarchive-ts",
  "version": "0.1.0",
  "description": "Archive.org API wrapper written in Typescript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "cross-env NODE_ENV=testing ts-mocha \"src/**/*.spec.ts\"",
    "test:integration": "cross-env NODE_ENV=testing ts-mocha \"src/**/*.integration.test.ts\"",
    "test:coverage": "c8 --reporter=lcov --reporter=text --reporter=text-summary npm run test:unit",
    "clean": "rm -rf ./dist",
    "build": "npm run clean && tsc",
    "doc": "typedoc && cp ./internet-archive-ts-logo.svg ./docs && touch docs/.nojekyll"
  },
  "keywords": [
    "archive.org",
    "internet",
    "archive",
    "api"
  ],
  "author": "Thomas Novotny",
  "license": "ISC",
  "dependencies": {
    "minimatch": "^9.0.3",
    "rfc6902": "^5.1.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/chai-as-promised": "^8.0.2",
    "@types/express": "^5.0.6",
    "@types/mocha": "^10.0.0",
    "@types/node": "^24.10.1",
    "c8": "^10.1.3",
    "chai": "^4.3.6",
    "chai-as-promised": "^8.0.2",
    "cross-env": "^7.0.3",
    "express": "^5.2.1",
    "mocha": "^11.7.5",
    "ts-mocha": "^11.1.0",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.15"
  }
}
